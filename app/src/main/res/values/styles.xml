<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="common_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/common_btn_height_small</item>
        <item name="android:minWidth">@dimen/common_btn_width</item>
        <item name="android:padding">@dimen/margin_tv_10dp</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
    </style>

    <style name="common_btn_green_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/common_btn_height_small</item>
        <item name="android:minWidth">@dimen/common_btn_width</item>

        <item name="android:padding">@dimen/margin_tv_8dp</item>
        <item name="android:background">@drawable/bg_green_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="MyTabLayoutTextAppearanceInverse" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <!-- 详情页按钮样式 -->
    <style name="detail_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_tv_12dp</item>
        <item name="android:background">@drawable/bg_green_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
    </style>


    <!-- 详情页状态的title样式 -->
    <style name="detail_status_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/margin_tv_10dp</item>
        <item name="android:paddingLeft">@dimen/margin_tv_15dp</item>
        <item name="android:paddingTop">@dimen/margin_tv_10dp</item>
        <item name="android:paddingRight">@dimen/margin_tv_5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_15sp</item>
    </style>


