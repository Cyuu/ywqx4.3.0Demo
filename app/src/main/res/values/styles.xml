    </style>


    <!-- tablayout的字体样式 -->
    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>

    <!-- 站点详情页面，title -->
    <style name="detail_tv_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/margin_tv_10dp</item>
        <item name="android:drawablePadding">@dimen/margin_tv_5dp</item>
        <item name="android:paddingTop">@dimen/margin_tv_10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>

    <!-- 站点详情页面，title -->
    <style name="detail_tv_title_nopic_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/margin_tv_10dp</item>
        <item name="android:paddingTop">@dimen/margin_tv_10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>

    <!-- 间隔线 -->
    <style name="divide_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/bg_gray</item>
    </style>

    <!-- radiobutton样式 -->
    <style name="rb_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_color_selector</item>
        <item name="android:background">@drawable/bg_rb_selector</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:button">@null</item>
        <item name="android:padding">@dimen/margin_tv_10dp</item>
    </style>

