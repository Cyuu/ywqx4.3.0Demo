<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumb_image_layout"
                android:layout_margin="@dimen/margin_tv_10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ipc_big_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_green_selector"
                    android:drawableLeft="@drawable/ic_pic_tag"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:padding="@dimen/margin_tv_10dp"
                    android:text="大图"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_16sp" />

                <TextView
                    android:id="@+id/video_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_tv_10dp"
                    android:background="@drawable/bg_blue_selector"
                    android:drawableLeft="@drawable/ic_video"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:padding="@dimen/margin_tv_10dp"
                    android:text="视频"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_tv_10dp"
                android:paddingRight="@dimen/margin_tv_10dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_gray" />

                <TextView
                    android:id="@+id/dept_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_ju"
                    android:drawablePadding="@dimen/margin_tv_5dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_tv_10dp"
                    android:paddingTop="@dimen/margin_tv_10dp"
                    android:text="局名称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_gray" />

                <TextView
                    android:id="@+id/line_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_xian"
                    android:drawablePadding="@dimen/margin_tv_5dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_tv_10dp"
                    android:paddingTop="@dimen/margin_tv_10dp"
                    android:text="线路名称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_gray" />

                <TextView
                    android:id="@+id/station_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_zhan"
                    android:drawablePadding="@dimen/margin_tv_5dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_tv_10dp"
                    android:paddingTop="@dimen/margin_tv_10dp"
                    android:text="站点名称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_gray" />

                <TextView
                    android:id="@+id/pcdt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_zhan"
                    android:drawablePadding="@dimen/margin_tv_5dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_tv_10dp"
                    android:paddingTop="@dimen/margin_tv_10dp"
                    android:text="pcdt名称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_16sp" />

                <TextView
                    android:id="@+id/nvr_sid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_item"
                    android:drawablePadding="@dimen/margin_tv_5dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_tv_10dp"
                    android:paddingTop="@dimen/margin_tv_10dp"
                    android:text="nvr_sid："
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_gray" />

                <TextView
                    android:id="@+id/nvr_channel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_item"
                    android:drawablePadding="@dimen/margin_tv_5dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_tv_10dp"
                    android:paddingTop="@dimen/margin_tv_10dp"
                    android:text="nvr通道："
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_16sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_gray" />


                <TextView
                    android:id="@+id/nvr_ipc_conn_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_conn_26"
                    android:drawablePadding="@dimen/margin_tv_8dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_tv_10dp"
                    android:paddingTop="@dimen/margin_tv_10dp"
                    android:text="nvr与ipc连接状态："
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_gray" />


                <TextView
                    android:id="@+id/nvr_signal_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_signal"
                    android:drawablePadding="@dimen/margin_tv_5dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_tv_10dp"
                    android:paddingTop="@dimen/margin_tv_10dp"
                    android:text="nvr信号状态："
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_gray" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
