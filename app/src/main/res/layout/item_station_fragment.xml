<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="10dp"
    app:elevation="5dp">

    <LinearLayout
        android:id="@+id/station_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/station_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green_color"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_tv_5dp"
            android:paddingLeft="@dimen/margin_tv_12dp"
            android:paddingRight="@dimen/margin_tv_12dp"
            android:paddingTop="@dimen/margin_tv_5dp"
            android:text="ç«™"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_tv_10dp"
            android:layout_marginLeft="@dimen/margin_tv_10dp"
            android:layout_marginRight="@dimen/margin_tv_10dp"
            android:layout_marginTop="@dimen/margin_tv_5dp"
            android:layout_toRightOf="@+id/station_title"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/station_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_tv_10dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_16sp" />

            <TextView
                android:id="@+id/open_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/station_name"
                android:gravity="center_vertical"
                android:text=" "
                android:textColor="@color/black_light_color"
                android:textSize="@dimen/txt_14sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/station_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_tv_5dp"
            android:text=""
            android:textColor="@color/red_color"
            android:textSize="@dimen/txt_16sp"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.v7.widget.CardView>