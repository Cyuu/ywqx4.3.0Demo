<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stn_detail_control"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner"
    android:layout_marginLeft="@dimen/margin_tv_10dp"
    android:layout_marginRight="@dimen/margin_tv_10dp"
    android:layout_marginTop="@dimen/margin_tv_10dp"
    android:layout_marginBottom="@dimen/margin_tv_20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_tv_5dp"
        android:orientation="horizontal"
        android:padding="@dimen/margin_tv_10dp">

        <TextView
            android:id="@+id/open_alarm_dev"
            style="@style/detail_btn_style"
            android:text="打开告警设备" />

        <TextView
            android:id="@+id/close_alarm_dev"
            style="@style/detail_btn_style"
            android:layout_marginLeft="@dimen/margin_tv_10dp"
            android:text="关闭告警设备" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_tv_10dp">

        <TextView
            android:id="@+id/reset_gmdt"
            style="@style/detail_btn_style"
            android:text="重启系统" />

        <TextView
            android:id="@+id/clear_alarm"
            style="@style/detail_btn_style"
            android:layout_marginLeft="@dimen/margin_tv_10dp"
            android:text="清除系统报警" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_tv_5dp"
        android:orientation="horizontal"
        android:padding="@dimen/margin_tv_10dp">

        <TextView
            android:id="@+id/oepn_normal_mode"
            style="@style/detail_btn_style"
            android:text="开启系统正常模式" />

    </LinearLayout>

</LinearLayout>