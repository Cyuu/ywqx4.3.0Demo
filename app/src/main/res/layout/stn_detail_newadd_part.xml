<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/detail_status_gray_tab_style"
        android:drawableLeft="@drawable/ic_item"
        android:drawablePadding="@dimen/margin_tv_5dp"
        android:text="更多状态" />

    <!-- 状态： 打开/关闭 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_tv_10dp"
        android:paddingRight="@dimen/margin_tv_10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/up_alarm_light_title"
                style="@style/detail_status_title_style"
                android:text="上行告警灯：" />

            <TextView
                android:id="@+id/up_alarm_light"
                style="@style/detail_status_value_style" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/down_alarm_light_title"
                style="@style/detail_status_title_style"
                android:text="下行告警灯：" />

            <TextView
                android:id="@+id/down_alarm_light"
                style="@style/detail_status_value_style" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gps_state_title"
                style="@style/detail_status_title_style"
                android:text="GPS模块工作状态：" />

            <TextView
                android:id="@+id/gps_state"
                style="@style/detail_status_value_style" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/other_device_state_title"
                style="@style/detail_status_title_style"
                android:text="其他告警设备运行状态：" />

            <TextView
                android:id="@+id/other_device_state"
                style="@style/detail_status_value_style" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/other_device_state_w_title"
                style="@style/detail_status_title_style"
                android:text="其他告警设备工作状态：" />

            <TextView
                android:id="@+id/other_device_state_w"
                style="@style/detail_status_value_style" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/train_passing_title"
                style="@style/detail_status_title_style"
                android:text="火车通行状态：" />

            <TextView
                android:id="@+id/train_passing"
                style="@style/detail_status_value_style" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gmdt_work_run_title"
                style="@style/detail_status_title_style"
                android:text="主控(GMDT)运行：" />

            <TextView
                android:id="@+id/gmdt_work_run"
                style="@style/detail_status_value_style" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_gray" />

    </LinearLayout>

</LinearLayout>